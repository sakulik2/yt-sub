{
  "manifest_version": 3,
  "name": "yt-sub",
  "version": "1.2.1",
  "description": "Load ASS/SRT subtitles for YouTube videos with custom styling support",
  
  "permissions": [
    "activeTab",
    "storage",
    "fontSettings"
  ],
  
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YT Sub"
  },
  
  "content_scripts": [{
    "matches": ["https://*.youtube.com/watch*"],
    "js": ["content.js"], 
    "css": ["content.css"],
    "run_at": "document_end"
  }],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [{
    "resources": ["assjs.min.js", "ass-loader.js"],
    "matches": ["https://*.youtube.com/*"]
  }],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}